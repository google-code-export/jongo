<assembly>
  <id>demo</id>
  <formats>
    <format>zip</format>
  </formats>

  <!-- include all runtime libraries in the /lib folder of the output file -->
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>/lib</outputDirectory>
      <excludes>
        <exclude>jongo.jar</exclude>
      </excludes>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>src/main/resources/</directory>
      <outputDirectory>/etc</outputDirectory>
      <includes>
        <include>*.properties</include>
        <include>*.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>jongo</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>apps/</directory>
      <outputDirectory>/apps</outputDirectory>
      <includes>
        <include>*/**</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>
